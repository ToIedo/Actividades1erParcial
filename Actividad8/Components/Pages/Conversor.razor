@page "/conversor"
@rendermode InteractiveServer

<PageTitle>Conversor de Moneda</PageTitle>

<h1>Cambio de Moneda</h1>

<div>
    <div class="mt-3 d-flex align-items-center">
        <label for="cantidad" class="me-2" style="width:200px">Cantidad en MXN:</label>
        <input type="number" id="cantidad" @bind="Cantidad" class="form-control" />
    </div>
    <button class="btn btn-primary mt-3" @onclick="Convertir">Convertir</button>
</div>

<div class="mt-3 d-flex align-items-center">
    <label for="resultadoUSD" class="me-2" style="width:200px">Dólares Americanos:</label>
    <input type="text" id="resultadoUSD" class="form-control" value="@ResultadoUSD" disabled />
</div>
<div class="mt-3 d-flex align-items-center">
    <label for="resultadoEUR" class="me-2" style="width:200px">Euros:</label>
    <input type="text" id="resultadoEUR" class="form-control" value="@ResultadoEUR" disabled />
</div>
<div class="mt-3 d-flex align-items-center">
    <label for="resultadoGBP" class="me-2" style="width:200px">Libras Británicas:</label>
    <input type="text" id="resultadoGBP" class="form-control" value="@ResultadoGBP" disabled />
</div>

@code {
    private decimal Cantidad { get; set; } = 0;
    private string ResultadoUSD { get; set; } = "20.16 $ USD";
    private string ResultadoEUR { get; set; } = "21.66 € EUR";
    private string ResultadoGBP { get; set; } = "25.94 £ GBP";

    private decimal TasaUSD = 20.16M;
    private decimal TasaEUR = 21.66M;
    private decimal TasaGBP = 25.94M;

    private void Convertir()
    {
        if (Cantidad >= 0)
        {
            ResultadoUSD = (Cantidad / TasaUSD).ToString("N2") + " $ USD";
            ResultadoEUR = (Cantidad / TasaEUR).ToString("N2") + " € EUR";
            ResultadoGBP = (Cantidad / TasaGBP).ToString("N2") + " £ GBP";
        }
        else
        {
            ResultadoUSD = "0.00";
            ResultadoEUR = "0.00";
            ResultadoGBP = "0.00";
        }
    }
}